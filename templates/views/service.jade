extends ../layouts/default

block content
    .container
        .layout__left
            ul.service-categories
                each category, i in categories
                    li.service-categories__category(class= category.slug==serviceCategory ? "active" : "")
                        a(href= '../../'+category.slug+'/')= category.name
        .layout__right
                //- Оглавление
                ul.services-TOC
                    each service, i in services
                        li.services-TOC__item
                            a(href= '../'+service.slug+'/', class= service.slug==requiredService.slug ? "current" : "")= service.name

                //- Запрошенная услуга
                .services
                    .services__service
                        .services__title= requiredService.name
                        img.servicess__img(src=requiredService.image.url, alt=requiredService.name)
                        .services__brief!= requiredService.content.extended

